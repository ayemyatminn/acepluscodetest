<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_user_border"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/margin_medium"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvUserIamge"
        android:layout_width="@dimen/dimen_150"
        android:layout_height="@dimen/dimen_100"
        android:layout_margin="@dimen/margin_medium"
        app:cardCornerRadius="@dimen/margin_medium"
        android:elevation="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/dummy_user"
            android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dummy_user_name"
        android:layout_toEndOf="@id/cvUserIamge"
        android:layout_alignTop="@id/cvUserIamge"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_medium"
        android:layout_marginEnd="@dimen/margin_medium"
        style="@style/text_header_bold"/>


    <TextView
        android:id="@+id/tvUserEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dummy_user_email"
        android:layout_toEndOf="@id/cvUserIamge"
        android:layout_below="@id/tvUserName"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_medium"
        style="@style/text_regular"/>

</RelativeLayout>